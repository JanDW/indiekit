{
  "private": true,
  "name": "@paulrobertlloyd/indiekit",
  "version": "0.1.0",
  "description": "An IndieWeb publishing toolkit",
  "keywords": [
    "indieweb",
    "micropub"
  ],
  "author": {
    "name": "Paul Robert Lloyd",
    "url": "https://paulrobertlloyd.com"
  },
  "license": "MIT",
  "homepage": "https://paulrobertlloyd.github.io/indiekit/",
  "bugs": "https://github.com/paulrobertlloyd/indiekit/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/paulrobertlloyd/indiekit.git"
  },
  "scripts": {
    "preinstall": "npx lerna bootstrap",
    "start": "node packages/app",
    "dev": "nodemon packages/app",
    "test": "ava --verbose",
    "coverage": "nyc ava"
  },
  "engines": {
    "node": "12.x"
  },
  "dependencies": {
    "lerna": "^3.16.4"
  },
  "devDependencies": {
    "@indiekit/app": "file:packages/app",
    "@indiekit/config-jekyll": "file:packages/config-jekyll",
    "@indiekit/publication": "file:packages/publication",
    "@indiekit/publisher-github": "file:packages/publisher-github",
    "ava": "^2.3.0",
    "coveralls": "^3.0.6",
    "dotenv": "^8.1.0",
    "nock": "^11.3.3",
    "nodemon": "^1.19.2",
    "nyc": "^14.0.0",
    "sinon": "^7.4.2",
    "supertest": "^4.0.0",
    "valid-url": "^1.0.9",
    "xo": "^0.24.0"
  },
  "ava": {
    "environmentVariables": {
      "GITHUB_TOKEN": "abc123",
      "GITHUB_USER": "user",
      "GITHUB_REPO": "repo",
      "NODE_ENV": "test"
    },
    "files": [
      "packages/**/*.test.js"
    ]
  },
  "nyc": {
    "exclude": [
      "packages/app/index.js",
      "packages/support/lib/logger.js",
      "packages/**/*.test.js"
    ],
    "reporter": [
      "text",
      "lcovonly"
    ]
  },
  "xo": {
    "space": true,
    "rules": {
      "camelcase": [
        "warn",
        {
          "allow": [
            "access_token",
            "client_id",
            "error_description",
            "error_uri",
            "redirect_uri",
            "success_description",
            "token_type"
          ]
        }
      ],
      "capitalized-comments": "warn",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true,
          "packageDir": [
            "./",
            "./packages/app",
            "./packages/config-jekyll",
            "./packages/publisher-github"
          ]
        }
      ]
    }
  }
}
