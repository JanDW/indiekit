{%- set classes = "error-summary" + (" " + opts.classes if opts.classes) -%}
<div class="{{ classes }}" aria-labelledby="error-summary-title" role="alert" tabindex="-1"
  {%- for attr, value in opts.attributes %} {{ attr }}="{{ value }}"{% endfor -%}>
  <h2 class="error-summary__title" id="error-summary-title">
    {{ opts.title.html | safe if opts.title.html else opts.title.text }}
  </h2>
  <div class="error-summary__body">
  {% if opts.description.html or opts.description.text %}
    <p>{{ opts.description.html | safe if opts.description.html else opts.description.text }}</p>
  {% endif %}
  {% if opts.errorList %}
    <ul class="error-summary__list">
    {% for item in opts.errorList %}
      <li>
      {% if item.href %}
        <a href="{{ item.href }}"
          {%- for attr, value in item.attributes %} {{ attr }}="{{ value }}"{% endfor -%}>
          {{ item.html | safe if item.html else item.text }}
        </a>
      {% else %}
        {{ item.html | safe if item.html else item.text }}
      {% endif %}
      </li>
    {% endfor %}
    </ul>
  {% endif %}
  </div>
</div>