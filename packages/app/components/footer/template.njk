<footer class="footer">
{%- if opts.navigation %}
  <nav class="footer__navigation" aria-label="about">
  {%- for item in opts.navigation %}
    {%- if item.href and item.text %}
    <a href="{{ item.href }}">{{ item.text | safe }}</a>
    {%- endif %}
  {%- endfor %}
  </nav>
{%- endif %}
</footer>