{% extends "_form.njk" %}

{% set title = "Sign in" %}

{% block fieldset %}
  {{ input({
    label: {
      text: __("Web address")
    },
    id: "url",
    name: "url",
    type: "url",
    value: errors.url.value,
    errorMessage: {
      text: errors.url.msg,
      label: __("Error")
    } if errors.url
  }) | indent(2) }}

  {{ input({
    field: {
      classes: "visually-hidden"
    },
    name: "redirect_uri",
    type: "hidden",
    value: redirect_uri
  }) | indent(2) }}

  {{ button({
    text: __("Sign in")
  }) | indent(2) }}
{% endblock %}