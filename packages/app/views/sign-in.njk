{% extends "_form.njk" %}

{% set title = "Sign in" %}

{% block fieldset %}
  {{ input ({
    errorMessage: {
      classes: "foo bar",
      text: errors.url.msg,
      label: __("Error")
    } if errors.url,
    label: {
      text: __("Web address")
    },
    id: "url",
    name: "url",
    value: errors.url.value
  }) | indent(2) }}

  {{ input ({
    type: "hidden",
    name: "redirect_uri",
    value: redirect_uri
  }) | indent(2) }}

  {{ button({
    text: __("Sign in")
  }) | indent(2) }}
{% endblock %}