{% extends "_form.njk" %}

{% set title = __("config.gitlab.title") %}
{% set parent = __("config.title %s", app.name) %}

{% block fieldset %}
  {{ input({
    id: "instance",
    name: "instance",
    value: errors.instance.value or gitlab.instance or "https://gitlab.com",
    label: {
      text: __("config.gitlab.instance.label")
    },
    type: "url",
    errorMessage: {
      text: errors.instance.msg,
      label: __("Error")
    } if errors.instance
  }) | indent(2) }}

  {{ input({
    id: "user",
    name: "user",
    value: errors.user.value or gitlab.user,
    label: {
      text: __("config.gitlab.user.label")
    },
    attributes: {
      spellcheck: "false"
    },
    errorMessage: {
      text: errors.user.msg,
      label: __("Error")
    } if errors.user
  }) | indent(2) }}

  {{ input({
    id: "repo",
    name: "repo",
    value: gitlab.repo,
    label: {
      text: __("config.gitlab.repo.label")
    },
    hint: {
      text: __("config.gitlab.repo.hint")
    },
    attributes: {
      spellcheck: "false"
    },
    errorMessage: {
      text: errors.repo.msg,
      label: __("Error")
    } if errors.repo
  }) | indent(2) }}

  {{ input({
    id: "branch",
    name: "branch",
    value: errors.branch.value or gitlab.branch or "master",
    label: {
      text: __("config.gitlab.branch.label")
    },
    hint: {
      text: __("config.gitlab.branch.hint")
    },
    attributes: {
      spellcheck: "false"
    },
    errorMessage: {
      text: errors.branch.msg,
      label: __("Error")
    } if errors.branch
  }) | indent(2) }}

  {{ input({
    id: "token",
    name: "token",
    value: errors.token.value or gitlab.token,
    label: {
      text: __("config.gitlab.token.label")
    },
    hint: {
      text: __("config.gitlab.token.hint", host + "/profile/personal_access_tokens")
    },
    attributes: {
      maxlength: 40,
      spellcheck: "false"
    },
    errorMessage: {
      text: errors.token.msg,
      label: __("Error")
    } if errors.token
  }) | indent(2) }}

  {{ button({
    text: __("Save changes") if referrer else __("Save and continue")
  }) | indent(2) }}
{% endblock %}