{% extends "form.njk" %}

{% set title = __("config.app.title") %}
{% set parent = __("Configuration") %}

{% block fieldset %}
  {{ select({
    id: "publisherId",
    name: "publisherId",
    label: {
      text: __("config.app.publisherId.label")
    },
    items: [{
      value: "github",
      text: __("publisherId.github"),
      selected: app.publisherId == "github"
    }, {
      value: "gitlab",
      text: __("publisherId.gitlab"),
      selected: app.publisherId == "gitlab"
    }],
    errorMessage: {
      text: errors.publisherId.msg,
      label: __("Error")
    } if errors.publisherId
  }) | indent(2) }}

  {{ select({
    id: "locale",
    name: "locale",
    label: {
      text: __("config.app.locale.label")
    },
    items: [{
      value: "de",
      text: "de" | language,
      selected: app.locale == "de"
    }, {
      value: "en",
      text: "en" | language,
      selected: app.locale == "en"
    }],
    errorMessage: {
      text: errors.locale.msg,
      label: __("Error")
    } if errors.locale
  }) | indent(2) }}

  {{ input({
    id: "theme-color",
    name: "themeColor",
    value: errors.themeColor.value or app.themeColor,
    classes: "input--width-5",
    label: {
      text: __("config.app.themeColor.label")
    },
    type: "color",
    errorMessage: {
      text: errors.themeColor.msg,
      label: __("Error")
    } if errors.themeColor
  }) | indent(2) }}

  {{ button({
    text: __("Save changes") if referrer else __("Save and continue")
  }) | indent(2) }}
{% endblock %}