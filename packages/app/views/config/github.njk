{% extends "_form.njk" %}

{% set title = __("config.github.title") %}
{% set parent = __("Configuration") %}

{% block fieldset %}
  {{ input({
    id: "user",
    name: "user",
    value: errors.user.value or github.user,
    label: {
      text: __("config.github.user.label")
    },
    attributes: {
      spellcheck: "false"
    },
    errorMessage: {
      text: errors.user.msg,
      label: __("Error")
    } if errors.user
  }) | indent(2) }}

  {{ input({
    id: "repo",
    name: "repo",
    value: errors.repo.value or github.repo,
    label: {
      text: __("config.github.repo.label")
    },
    hint: {
      text: __("config.github.repo.hint")
    },
    attributes: {
      spellcheck: "false"
    },
    errorMessage: {
      text: errors.repo.msg,
      label: __("Error")
    } if errors.repo
  }) | indent(2) }}

  {{ input({
    id: "branch",
    name: "branch",
    value: errors.branch.value or github.branch or "master",
    label: {
      text: __("config.github.branch.label")
    },
    hint: {
      text: __("config.github.branch.hint")
    },
    attributes: {
      spellcheck: "false"
    },
    errorMessage: {
      text: errors.branch.msg,
      label: __("Error")
    } if errors.branch
  }) | indent(2) }}

  {{ input({
    id: "token",
    name: "token",
    value: errors.token.value or github.token,
    label: {
      text: __("config.github.token.label")
    },
    hint: {
      text: __("config.github.token.hint", "https://github.com/settings/tokens")
    },
    attributes: {
      maxlength: 40,
      spellcheck: "false"
    },
    errorMessage: {
      text: errors.token.msg,
      label: __("Error")
    } if errors.token
  }) | indent(2) }}

  {{ button({
    text: __("Save changes") if referrer else __("Save and continue")
  }) | indent(2) }}
{% endblock %}