{% extends "_default.njk" %}

{%- set legendText -%}
  {% if parent %}<span class="fieldset__parent">{{ parent }}</span> {% endif %}
  {{ title | safe }}
{%- endset -%}

{% block main %}
    <form class="form" method="post">
      {% call fieldset({
        legend: {
          classes: "visually-hidden" if minimalui,
          text: legendText,
          isPageHeading: true
        },
        indent: 6
      }) %}{% block fieldset %}
      {% endblock %}{% endcall %}
    </form>
{% endblock %}