{% from "preview/macro.njk" import preview %}

{% extends "_form.njk" %}

{% set title = __("Share") %}

{% block fieldset %}
  {{ preview({
    title: {
      text: __("Title"),
      for: "name",
      value: name
    },
    text: {
      text: __("Content"),
      for: "content",
      value: content
    },
    url: {
      text: __("URL"),
      for: "url",
      value: url
    },
    date: "now"
  }) }}

  {{ input({
    id: "name",
    name: "name",
    value: name,
    label: {
      text: __("Title")
    }
  }) }}

  {{ textarea({
    id: "content",
    name: "content",
    value: content,
    label: {
      text: __("Content")
    }
  }) | indent(8) }}

  {{ input({
    id: "url",
    name: "bookmark-of",
    value: url,
    label: {
      text: __("URL")
    }
  }) }}

  {{ input({
    name: "access_token",
    value: session.token,
    field: {
      classes: "visually-hidden"
    },
    type: "hidden"
  }) }}

  {{ input({
    name: "h",
    value: "entry",
    field: {
      classes: "visually-hidden"
    },
    type: "hidden",
  }) }}

  {{ button({
    text: __("Publish")
  }) }}
{% endblock %}