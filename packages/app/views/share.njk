{% from "preview/macro.njk" import preview %}

{% extends "_form.njk" %}

{% set title = "Share" %}

{% block fieldset %}
  {{ preview({
    title: {
      text: __("Title"),
      for: "name",
      value: name
    },
    content: {
      text: __("Content"),
      for: "content",
      value: content
    },
    href: {
      text: __("URL"),
      for: "bookmark-of",
      value: url
    },
    date: "now"
  }) }}

  {{ input({
    label: {
      text: __("Title")
    },
    id: "title",
    name: "title",
    value: name
  }) }}

  {{ input({
    label: {
      text: __("URL")
    },
    id: "bookmark-of",
    name: "bookmark-of",
    value: url
  }) }}

  {{ textarea({
    label: {
      text: __("Content")
    },
    id: "content",
    name: "content",
    value: content
  }) | indent(8) }}

  {{ input({
    field: {
      classes: "visually-hidden"
    },
    type: "hidden",
    name: "access_token",
    value: session.token
  }) }}

  {{ input({
    field: {
      classes: "visually-hidden"
    },
    type: "hidden",
    name: "h",
    value: "entry"
  }) }}

  {{ button({
    text: __("Publish")
  }) }}
{% endblock %}