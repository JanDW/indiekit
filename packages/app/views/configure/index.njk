{% extends "_form.njk" %}

{% set title = "Server settings" %}

{% block fieldset %}
  {{ select({
    label: {
      text: __("server.configure.locale.label")
    },
    id: "locale",
    name: "locale",
    items: [{
      value: "de",
      text: "Deutsch"
    }, {
      value: "en-GB",
      text: "English (British)",
      selected: true
    }],
    errorMessage: {
      text: errors.locale.msg,
      label: __("Error")
    } if errors.locale
  }) | indent(2) }}

  {{ input({
    classes: "input--width-5",
    label: {
      text: __("server.configure.color.label")
    },
    id: "color",
    name: "color",
    type: "color",
    value: app.themeColor,
    errorMessage: {
      text: errors.color.msg,
      label: __("Error")
    } if errors.color
  }) | indent(2) }}

  {{ button({
    text: __("Continue")
  }) | indent(2) }}
{% endblock %}