{% extends "_form.njk" %}

{% set title = __("configure.app.title") %}

{% block fieldset %}
  {{ select({
    id: "publisher",
    name: "publisher",
    label: {
      text: __("configure.app.publisher.label")
    },
    items: [{
      value: "github",
      text: "GitHub",
      selected: publisher == "github"
    }, {
      value: "gitlab",
      text: "GitLab",
      selected: publisher == "gitlab",
      disabled: true
    }],
    errorMessage: {
      text: errors.publisher.msg,
      label: __("Error")
    } if errors.publisher
  }) | indent(2) }}

  {{ select({
    label: {
      text: __("configure.app.locale.label")
    },
    id: "locale",
    name: "locale",
    items: [{
      value: "de",
      text: "Deutsch",
      selected: locale == "de"
    }, {
      value: "en-GB",
      text: "English (British)",
      selected: locale == "en-GB"
    }],
    errorMessage: {
      text: errors.locale.msg,
      label: __("Error")
    } if errors.locale
  }) | indent(2) }}

  {{ input({
    classes: "input--width-5",
    label: {
      text: __("configure.app.themeColor.label")
    },
    id: "theme-color",
    name: "themeColor",
    type: "color",
    value: themeColor,
    errorMessage: {
      text: errors.themeColor.msg,
      label: __("Error")
    } if errors.themeColor
  }) | indent(2) }}

  {{ button({
    text: __("Continue")
  }) | indent(2) }}
{% endblock %}